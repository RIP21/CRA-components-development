{
  "name": "CRA-components-development",
  "version": "0.1.7",
  "private": true,
  "homepage": "http://rip21.github.io/CRA-components-development/",
  "engines": {
    "node": ">=4.0.0"
  },
  "author": {
    "name": "Andrii Los",
    "email": "puha212@gmail.com",
    "url": "https://twitter.com/RIP212"
  },
  "keywords": [
    "components",
    "react",
    "react-component",
    "toolkit"
  ],
  "scripts": {
    "demo:start": "react-scripts start",
    "demo:build": "react-scripts build",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "test:coverage": "npm test -- --coverage",
    "prettier": "prettier --write src/*/**.js",
    "eslint": "eslint ./src",
    "stylelint": "stylelint src/*/**.js",
    "prestylecheck": "run-s prettier",
    "stylecheck": "run-p stylelint eslint",
    "clean": "rimraf lib",
    "build:css": "cpx \"./src/components/**/*.css\" ./lib",
    "build:es6": "cross-env NODE_ENV=production babel src/components --out-dir lib --ignore test.js",
    "prebuild": "run-p stylecheck test clean",
    "build": "run-p build:*",
    "postbuild": "node scripts/copyBuildFiles.js",
    "predeploy:docs": "npm run styleguide:build",
    "deploy:docs": "gh-pages -d styleguide",
    "prerelease": "npm run build",
    "release": "cd lib && npm publish && cd .. && npm run deploy:docs"
  },
  "dependencies": {
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "semantic-ui-css": "^2.2.10",
    "semantic-ui-react": "^0.72.0",
    "styled-components": "^2.0.0"
  },
  "devDependencies": {
    "gh-pages": "^1.0.0",
    "babel-cli": "^6.23.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.0",
    "enzyme": "^2.8.2",
    "eslint": "^4.0.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "jest-styled-components": "^4.0.0",
    "husky": "^0.14.0",
    "jest-enzyme": "^3.2.0",
    "lint-staged": "^4.0.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.4.2",
    "prop-types": "latest",
    "react-scripts": "1.0.11",
    "react-styleguidist": "^6.0.0",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-processor-styled-components": "^0.3.0",
    "webpack": "^3.0.0"
  },
  "files": [
    "lib"
  ],
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx}",
      "!src/components/**/*/index.{js,jsx}",
      "!src/components/index.js"
    ]
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": "stylelint-config-standard",
    "syntax": "scss",
    "rules": {
      "block-opening-brace-space-after":"never-single-line",
      "block-closing-brace-space-before":"never-single-line"
    }
  },
  "lint-staged": {
    "*": [
      "prettier"
    ]
  }
}
